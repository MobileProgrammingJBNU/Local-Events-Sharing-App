<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:theme="@style/ThemeOverlay.MobileProgrammingProject.FullscreenContainer"
    tools:context=".Signup">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="회원가입"
        app:titleTextAppearance="@style/ToolbarTitleText">
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signNametext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="5dp"
                android:text="닉네임"
                android:textColor="#222831"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/signName"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_rounded"
                android:ems="10"
                android:hint=" 닉네임"
                android:padding="8dp"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/signIDtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="이메일"
                android:textColor="#222831"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/signEmail"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_rounded"
                android:ems="10"
                android:hint="이메일"
                android:padding="8dp"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/signPWtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="비밀번호"
                android:textColor="#222831"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/signPW"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_rounded"
                android:ems="10"
                android:padding="8dp"
                android:hint=" 비밀번호"
                android:inputType="textPassword"
                android:text="" />

            <TextView
                android:id="@+id/signPW2text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="비밀번호 확인"
                android:textColor="#222831"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/signPW2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/custom_rounded"
                    android:ems="10"
                    android:hint=" 비밀번호 다시 입력"
                    android:padding="8dp"
                    android:inputType="textPassword"
                    android:text="" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/pwcheckbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#00ADB5"
                    android:text="확인"
                    android:textColor="#EEEEEE"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signupbutton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="#00ADB5"
                android:text="로그인 화면으로 이동"
                android:textColor="#EEEEEE"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>