<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 지도를 표시할 레이아웃 -->
    <FrameLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- New layout above the existing ImageView -->
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/color4">

        <ImageView
            android:id="@+id/btnMoveToMyLocation"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:clickable="true"
            app:srcCompat="@drawable/mylocation" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>


    <!-- 하단 네비게이션 -->
    <LinearLayout
        android:id="@+id/writeLayout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:background="#80D3D3D3"
            android:layout_width="match_parent"
            android:layout_height="3px" />
        <!-- TextView -->
        <TextView
            android:id="@+id/tvMyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:inputType="textMultiLine"
            android:text="게시글을 추가할 위치를 선택해주세요."
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <!-- 버튼 -->
        <Button
            android:id="@+id/btnMyButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/color4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@color/color3"
            android:text="이 위치로 설정"/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:itemBackground="@color/color4"
        app:itemIconTint="@color/color1"
        app:itemTextColor="@color/color1"
        app:menu="@menu/navi_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <!-- 새로운 레이아웃 -->
</LinearLayout>
